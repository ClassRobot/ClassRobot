{% extends 'styles.jinja' %} 
{% block helper %} 
<style>
    body {
        background-color: rgb(229,229,229);
    }
    .card {
        margin: 12px 0;
        border-radius: 10px;
        background-color: white;
        padding: 10px 20px;
    }
</style>
    {% for helper in helpers %} 
        <div class="card">
            <h3>{{ helper.cmd }}</h3>
            <p class="doc">{{ helper.doc.replace("\n", "<br>") }}</p>
            <p>
                <span>参数 : </span>
                {% for param in helper.params %}
                <code>{{ param }}</code>
                {% endfor %}
            </p>
            <p>
                <span>类型 : </span>
                {% for tag in helper.tags %}
                <code>{{ tag }}</code>
                {% endfor %}
            </p>
        </div>
    {% endfor %} 
{% endblock helper %}
